<?xml version="1.0"?>

<robot xmlns="http://drake.mit.edu"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 name="planar_pushing">

  <link name="world">
    <visual>
      <origin xyz="0 0 -0.2" rpy="0 0 0" />
      <geometry>
        <box size="10 10 0.2" />
      </geometry>
      <material>
        <color rgba="0.93 .74 .4 0.8" />
      </material>
    </visual>
    <collision name="collision">
        <origin xyz="0 0 -0.2" rpy="0 0 0" />
        <geometry>
          <box size="10 10 0.2" />
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>2</mu>
              <mu2>2</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
  </link>


  <link name="sphere_x_link">
    <inertial>
      <origin xyz="0 0 0.3" rpy="0 0 0" />
      <mass value="0" />
      <inertia ixx="0.00" ixy="0" ixz="0" iyy="0.00" iyz="0" izz="0.00" />
    </inertial>
  </link>

  <link name="sphere_actuated">
    <inertial>
      <origin xyz="0 0 0.3" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="0.004" ixy="0" ixz="0" iyy="0.004" iyz="0" izz="0.004" />
    </inertial>
    <visual>
      <origin xyz="0 0 0.3" rpy="0 0 0" />
      <geometry>
        <sphere radius=".1" />
      </geometry>
      <material>
        <color rgba="0 1 0 1" />
      </material>
    </visual>
    <collision name="collision">
        <geometry>
          <sphere radius=".1" />
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>.2</mu>
              <mu2>.2</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
  </link>
  
  <joint name="x_slider" type="prismatic">
    <parent link="world" />
    <child link="sphere_x_link" />
    <origin xyz="0 0 0" />
    <axis xyz="1 0 0" />
  </joint>

  <joint name="y_slider" type="prismatic">
    <parent link="sphere_x_link" />
    <child link="sphere_actuated" />
    <origin xyz="0 0 0" />
    <axis xyz="0 1 0" />
  </joint>

  <transmission type="SimpleTransmission" name="x_force">
    <actuator name="x_force_actuator" />
    <joint name="x_slider" />
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>

  <transmission type="SimpleTransmission" name="y_force">
    <actuator name="y_force_actuator" />
    <joint name="y_slider" />
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>

  <link name="box">
    <inertial>
      <origin xyz="0 0 0.5" rpy="0 0 0" />
      <mass value="5.0" />
      <inertia ixx="0.166666666666667" ixy="0" ixz="0" iyy="0.166666666666667" iyz="0" izz="0.166666666666667" />
    </inertial>
    <visual>
      <origin xyz="0 0 0.5" rpy="0 0 0" />
      <geometry>
        <box size="0.999 0.999 0.999" />
      </geometry>
      <material>
        <color rgba="1 0 0 1" />
      </material>
    </visual>
    <collision name="collision">
        <origin xyz="0 0 0.5" rpy="0 0 0" />
        <geometry>
          <box size="0.999 0.999 0.999" />
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>2</mu>
              <mu2>0.5</mu2>
            </ode>
          </friction>
        </surface>
    </collision>
    <collision name="minus_x_lower_left_corner">
        <pose> -0.5 -0.5 -0.5 0 0 0</pose>
        <geometry>
          <sphere radius="1e-7" />
        </geometry>
      </collision>

      <collision name="minus_x_lower_right_corner">
        <pose> -0.5 0.5 -0.5 0 0 0 </pose>
        <geometry>
          <sphere radius="1e-7" />
        </geometry>
      </collision>

      <collision name="plus_x_lower_left_corner">
        <pose> 0.5 -0.5 -0.5 0 0 0</pose>
        <geometry>
          <sphere radius="1e-7" />
        </geometry>
      </collision>

      <collision name="plus_x_lower_right_corner">
        <pose> 0.5 0.5 -0.5 0 0 0 </pose>
        <geometry>
          <sphere radius="1e-7" />
        </geometry>
      </collision>

      <collision name="minus_x_upper_left_corner">
        <pose> -0.5 -0.5 0.5 0 0 0</pose>
        <geometry>
          <sphere radius="1e-7" />
        </geometry>
      </collision>

      <collision name="minus_x_upper_right_corner">
        <pose> -0.5 0.5 0.5 0 0 0 </pose>
        <geometry>
          <sphere radius="1e-7" />
        </geometry>
      </collision>

      <collision name="plus_x_upper_left_corner">
        <pose> 0.5 -0.5 0.5 0 0 0</pose>
        <geometry>
          <sphere radius="1e-7" />
        </geometry>
      </collision>

      <collision name="plus_x_upper_right_corner">
        <pose> 0.5 0.5 0.5 0 0 0 </pose>
        <geometry>
          <sphere radius="1e-7" />
        </geometry>
      </collision>
  </link>
</robot>
